---

<!DOCTYPE html>
<html lang="zh" style="overflow: overlay;min-height: 100vh;">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <Header />
    <Main>
      <PageHeader
        title="友链"
        description="很赞的博客列表，欢迎在下方 issues 中留言，交换友链～"
      />

      <div class="max-w-6xl mx-auto px-4">
        <section class="mb-12">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            {
              sites.map(site => (
                <a
                  href={site.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group relative block p-4 bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border border-gray-100 dark:border-gray-700 hover:border-orange-400 dark:hover:border-orange-400"
                >
                  <div class="flex items-center space-x-4">
                    <div class="flex-shrink-0">
                      {site.icon ? (
                        <img
                          src={site.icon}
                          alt={site.title}
                          class="w-12 h-12 rounded-full object-cover"
                        />
                      ) : (
                        <div class="w-12 h-12 rounded-full bg-orange-400 flex items-center justify-center text-white text-2xl">
                          {site.avatar || '🔗'}
                        </div>
                      )}
                    </div>
                    <div class="flex-1 min-w-0">
                      <h3 class="text-lg font-semibold text-gray-900 dark:text-white group-hover:text-orange-400 transition-colors duration-200 truncate">
                        {site.title}
                      </h3>
                      {site.description && (
                        <p class="text-sm text-gray-600 dark:text-gray-300 mt-1 line-clamp-2">
                          {site.description}
                        </p>
                      )}
                    </div>
                  </div>
                  <div class="absolute inset-0 rounded-xl bg-orange-400/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                </a>
              ))
            }
          </div>
        </section>
      </div>
    </Main>

    <div class="max-w-6xl mx-auto px-4 pb-12">
      <div class="text-center">
        <div
          class="inline-flex items-center justify-center p-6 bg-orange-50 dark:bg-gray-800 rounded-2xl border border-orange-200 dark:border-gray-600"
        >
          <div class="text-center">
            <div class="text-3xl mb-2">🤝</div>
            <h3
              class="text-lg font-semibold text-gray-800 dark:text-white mb-2"
            >
              友链交换
            </h3>

            <a
              target="_blank"
              href="https://github.com/PeterChen1997/Astro-Home/issues/17"
              class="inline-flex items-center px-6 py-3 bg-orange-400 text-white font-medium rounded-lg hover:bg-orange-500 transition-colors duration-200 shadow-lg hover:shadow-xl"
            >
              <span>来吧朋友</span>
              <svg
                class="w-4 h-4 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
    <Footer />
  </Body>
</html>
