---
import HeaderLink from './HeaderLink.astro'
import ThemeToggle from './ThemeToggleButton'
import logoSvg from '/favicon.svg'
import DropdownMenu, { MENUS } from './DropdownMenu'
---

<header class="fixed w-full p-2 z-20 backdrop-blur-md bg-white/80 dark:bg-transparent border-b border-gray-200/30 dark:border-gray-700/30">
  <div class="mx-auto max-w-4xl">
    <nav class="flex items-center gap-2 text-base">
      {/* Logo */}
      <a href="/" class="group flex items-center gap-2 px-3 py-2 rounded-xl hover:bg-gray-100/80 dark:hover:bg-white/5 transition-colors duration-200">
        <img src={logoSvg} class="w-6 h-6" alt="logo" />
        <span class="font-semibold text-gray-800 dark:text-gray-100 group-hover:text-orange-500 transition-colors">
          龙场茶室
        </span>
      </a>
      
      {/* 桌面端导航 */}
      <div class="items-center gap-1 hidden md:flex ml-2">
        {MENUS.map((menu) => (
          <HeaderLink href={menu.path} target={menu.target}>
            {menu.hideIcon ? '' : (menu.icon && <menu.icon className="w-4 h-4" />)}
            {menu.hideTitle ? '' : menu.title}
          </HeaderLink>
        ))}
      </div>
      
      {/* 右侧空白 */}
      <div class="flex-1"></div>
      
      {/* 工具栏 */}
      <div class="flex items-center gap-2">
        <ThemeToggle client:visible />
        <DropdownMenu client:visible />
      </div>
    </nav>
  </div>
</header>
