      integrations: [new BrowserTracing(), new Sentry.Replay()],
      tracesSampleRate: 1.0,
      replaysSessionSampleRate: 0.1,
      replaysOnErrorSampleRate: 1
    })

  LogRocket && LogRocket.init('blog-mi42z/blog')
</script>

